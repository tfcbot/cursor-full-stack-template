{
    "compilerOptions": {
      "target": "es6",
      "module": "ESNext",
      "moduleResolution": "node",
      "baseUrl": "..",
      "paths": {
        "@services/*": ["frontend/src/services/*"],
        "@metadata/*": ["metadata/*"]
      },
      "jsx": "preserve",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["vitest/globals", "node"]
    },
    "include": [
      "**/*.test.ts",
      "**/*.ts",
      "**/*.tsx",
      "../frontend/src/**/*.ts",
      "../frontend/src/**/*.tsx",
      "../metadata/**/*.ts"
    ]
}
  